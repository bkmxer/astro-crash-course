---
import Layout from "../layouts/Layout.astro";
const name = "Astro";
const style = "purple";
const response = await fetch("https://jsonplaceholder.typicode.com/users?_limit=10");
const users = await response.json();
const visible = false;
---

<Layout>
	<h1 class={style}>Hello {name}! </h1>
	<h2>Subtitle h2</h2>

	<ul>
		{users.length && users.map((user) => <li>{user.name}</li>)}
	</ul>

	{visible ? <p>Visible</p> : <p>Not Visible</p>}
</Layout>

<style>
	h1 {
		color: red;
	}

	.purple {
		color: purple;
	}
</style>